<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>

    <util:properties id="consumer" location="classpath*:consumer.properties"></util:properties>
    <util:properties id="producer" location="classpath*:producer.properties"></util:properties>

    <bean id="basicAWSCredentials" class="com.amazonaws.auth.BasicAWSCredentials">
        <constructor-arg value="AKIAJUFNNYKM4OFFQLBQ"></constructor-arg>
        <constructor-arg value="E4mSOkZ41XJyXp+OJBir4IkFXcu7zM4MUKCXLvH5"></constructor-arg>
    </bean>

    <bean id="amazonS3Client" class="com.amazonaws.services.s3.AmazonS3Client">
        <constructor-arg value="#{basicAWSCredentials}" type="com.amazonaws.auth.AWSCredentials"></constructor-arg>
    </bean>

    <bean id="dataflowService" class="mil.nga.xid.vandl.service.DataflowService">
        <property name="consumer" ref="consumer"></property>
        <property name="producer" ref="producer"></property>
        <property name="amazonS3Client" ref="amazonS3Client"></property>
    </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate"></bean>
</beans>